<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EmergenciaActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

    <TextView
        android:id="@+id/titulo"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="13dp"
        android:fontFamily="@font/avenirbold"
        android:textColor="@color/azulescuro"
        android:text="Detalhes da emergÃªncia"
        android:textSize="32sp"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tvDataHora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="18dp"
            android:text="ALOHUMORA"
            android:textSize="20sp"
            android:textColor="@color/azulclaro"
            android:fontFamily="@font/avenir"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/titulo"/>

    <TextView
        android:id="@+id/tvTNome"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="9dp"
        android:fontFamily="@font/avenirbold"
        android:textColor="@color/azulescuro"
        android:text="Nome: "
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@+id/tvDataHora"/>

    <TextView
        android:id="@+id/tvNome"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginHorizontal="15dp"
        android:paddingTop="10dp"
        android:paddingLeft="30dp"
        android:textColor="@color/black"
        android:text="Alo"
        android:textSize="20sp"
        android:fontFamily="@font/avenir"
        android:background="@drawable/textbox"
        app:layout_constraintTop_toBottomOf="@+id/tvTNome"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tvTTelef"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="9dp"
        android:fontFamily="@font/avenirbold"
        android:textColor="@color/azulescuro"
        android:text="Telefone: "
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@+id/tvNome"/>

    <TextView
        android:id="@+id/tvTelefone"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginHorizontal="15dp"
        android:paddingTop="10dp"
        android:paddingLeft="30dp"
        android:textColor="@color/black"
        android:text="Alo"
        android:textSize="20sp"
        android:fontFamily="@font/avenir"
        android:background="@drawable/textbox"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTTelef"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivFoto1"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="30dp"
        app:strokeWidth="9dp"
        app:circularflow_radiusInDP="7dp"
        app:strokeColor="@color/azulclaro"
        android:src="@drawable/bebe1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivTeste1"/>

        <ImageView
            android:id="@+id/ivTeste1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvTelefone"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivFoto2"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="30dp"
        app:strokeWidth="9dp"
        app:circularflow_radiusInDP="7dp"
        app:strokeColor="@color/azulclaro"
        android:src="@drawable/bebe2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivFoto1"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivFoto3"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_marginTop="30dp"
            app:strokeWidth="9dp"
            app:circularflow_radiusInDP="7dp"
            app:strokeColor="@color/azulclaro"
            android:src="@drawable/bebe3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivFoto2"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnAceitar"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:background="@drawable/custom_button"
                android:text="Aceitar"
                android:textSize="20sp"
                android:textColor="@color/white"
                app:layout_constraintBaseline_toBaselineOf="@id/btnRecusar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/btnRecusar"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnRecusar"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/btnaceite"
                android:text="Negar"
                android:textSize="20sp"
                android:textColor="@color/white"
                app:layout_constraintTop_toBottomOf="@id/ivFoto3"
                app:layout_constraintStart_toEndOf="@id/btnAceitar"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                app:layout_constraintTop_toBottomOf="@id/btnAceitar"/>

</androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>